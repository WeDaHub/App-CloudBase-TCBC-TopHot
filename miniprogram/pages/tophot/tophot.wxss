.hot-item{
  height: auto;
  display: flex;
  box-sizing:border-box;
  margin-bottom:10px;
  margin-left: 6px;
  margin-right: 6px;
  box-shadow: 0 3px 2px rgb(18 18 18 / 10%);
}
.hot-item-left{
  width: 70px;
  height: auto;
  margin-right: 10px;
  margin-left: 10px;
  margin-bottom:16px;
}

.hot-item-left image {
  margin-top:10px;
  width:50px;
  height: 50px;
}
.hot-item-right{
  display: flex;
  margin-top:10px;
  margin-right:10px;
  flex-direction: column;
  width: 100%;
  height: auto;
  margin-bottom:16px;
}
.hot-item-right-title{
  height:fit-content;
  font-weight: bold;
  font-size:medium;
  margin-bottom: 5px;
}
.hot-item-right-desc{
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp: 3;
  overflow:hidden;
  text-overflow:ellipsis;
  font-size:small;
  height:fit-content;
  word-break: break-all;
}
.hot-item-right-bottom{
  display: flex;
  margin-top:10px;
  margin-bottom: -10px;
  height: 20px;
  flex-direction: row;
  width:100%;
}

.hot-item-right-update{
  font-size:small;
  color: #8590a6;
  width:50%;
}

.hot-item-right-views{
  width:50%;
  text-align: right;
  font-size:small;
  color: #8590a6;
}